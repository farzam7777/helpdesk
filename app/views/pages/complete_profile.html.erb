<div class="container">
	<div class="row">
		<h1> <center> Select your Role </center> </h1>
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<%= simple_form_for :pages, url: pages_path, method: :post do |f| %>
				<div class="form-group">
					<%= f.input :role, as: :select, collection: ["Seller", "Buyer"], include_blank:' Select Role', input_html: {class: 'form-control'}, label: 'Sign Up As' %>
				</div>
				<div class="form-group">
					<%= f.submit 'Submit', class: 'btn btn-primary' %>
				</div>
			<% end %>
		</div>
		<div class="col-md-3"></div>
	</div>	
</div>
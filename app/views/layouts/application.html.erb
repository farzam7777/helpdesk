<!DOCTYPE html>
<html>
  <head>
    <title>HelpDesk</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<!-- Preloader Start -->
    <!-- <div id="preloader">
        <div class="preloader--inner"></div>
    </div> -->
    <!-- Preloader End -->

    <div class="wrapper">
    	<%= render 'header' %>
      <%= render "shared/flash_messages" %>
    	<%= yield %>
    	<%= render 'footer' %>
    </div>
  </body>

  <%= javascript_include_tag 'js/main.js', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'js/plugins.min.js', 'data-turbolinks-track': 'reload' %>

  <script type="text/javascript">
    $('.dropdown').click(function(){
      $(".dropdown").trigger('mouseenter');
      $(".dropdown").trigger('hover');
      $(".dropdown").trigger('mouseover');

      $(".dropdown-menu").trigger('mouseenter');
      $(".dropdown-menu").trigger('hover');
      $(".dropdown-menu").trigger('mouseover');

    });
  </script>

</html>
